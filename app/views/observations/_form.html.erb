<%= form_for(@observation) do |f| %>
  <% if @observation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@observation.errors.count, "error") %> prohibited this observation from being saved:</h2>

      <ul>
        <% @observation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number %><br>
    <%= f.number_field :number %>
  </div>
  <div class="field">
    <%= f.label :taxon_id %><br>
    <%= f.collection_select :taxon_id, Taxon.all, :id, :to_s, prompt: "Select Taxon" %>
  </div>
  <div class="field">
    <%= f.label :checklist_id %><br>
    <%= f.collection_select :checklist_id, Checklist.all, :id, :to_s, prompt: "Select Checklist" %>
  </div>
  <div class="field">
    <%= f.label :count_week %><br>
    <%= f.check_box :count_week %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_field :notes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
