<p id="notice"><%= notice %></p>

<h1>Listing Observers</h1>

<h4><%= @observers.count %> Observers</h4>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @observers.each do |observer| %>
      <tr>
        <td><%= observer.first_name %></td>
        <td><%= observer.last_name %></td>
        <td<% unless observer.has_email? %> class='review'<% end %>><%= observer.email %></td>
        <td><%= link_to 'Show', observer %></td>
        <td><%= link_to 'Edit', edit_observer_path(observer) %></td>
        <td><%= link_to 'Destroy', observer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

