<tr>
  <td class="observation_text"><%= observation.name %></td>
  <td class="cell-divider-right <%= count_class observation.number, observation.high, observation.low %>"><%= observation.number %></td>
  <td class="<%= high_class observation.number, observation.high %>"><%= observation.high %></td>
  <td class="<%= low_class observation.number, observation.high, observation.low %>"><%= observation.low %></td>
  <td class="cell-divider-right"><%= observation.all_years %></td>
  <td><%= observation.ten_year_avg %></td>
  <td class="cell-divider-right<%= change_class observation.ten_year_change %>"><%= change_percent observation.ten_year_change %></td>
  <td><%= observation.prior_year_avg %></td>
  <td class="cell-divider-right<%= change_class observation.prior_year_change %>"><%= change_percent observation.prior_year_change %></td>
  <% if false %><td class="cell-divider-right"><%= observation.all_year_avg %></td><% end %>
  <% observation.years.each do |year| %>
    <td class="<%= count_class year.last, observation.high, observation.low %> <%= selected_year_class year.first, @survey.to_s %>"><%= year.last %></td>
  <% end %>
</tr>
